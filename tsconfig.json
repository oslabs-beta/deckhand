{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowJs": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "outDir": "./build",
    "noImplicitAny": true,
    "moduleDetection": "force"
  },
  "include": ["app/**/*.ts", "app/**/*.tsx", "server/**/*.ts"],
  "exclude": ["node_modules"]
}